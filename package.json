{
  "name": "remove-storages",
  "description": "Remove storages. E.g. localStorage, indexedDB.",
  "version": "0.1.0",
  "author": {
    "name": "sanemat",
    "email": "o.gata.ken@gmail.com",
    "url": "sane.jp"
  },
  "dependencies": {
    "es6-promise": "^2.3.0"
  },
  "devDependencies": {
    "browserify": "^11.0.1",
    "conventional-changelog": "^0.2.1",
    "david": "^6.1.6",
    "derequire": "^2.0.0",
    "eclint": "^1.1.0",
    "eslint": "^1.0.0-rc",
    "espowerify": "^0.10.1",
    "fixpack": "^2.2.0",
    "globstar": "^1.0.0",
    "mocha": "^2.2.5",
    "power-assert": "^0.11.0",
    "rimraf": "^2.4.2",
    "testem": "^0.9.1",
    "touch": "^1.0.0"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "files": [
    "index.js",
    "build"
  ],
  "keywords": [
    "IndexedDB",
    "LocalStorage",
    "delete",
    "erase",
    "indexedDB",
    "indexeddb",
    "localStorage",
    "localstorage",
    "remove",
    "rm"
  ],
  "license": "MIT",
  "repository": "pandawing/node-remove-storages",
  "scripts": {
    "build:browser": "npm prune && npm dedupe && browserify --standalone removeStorages ./index.js | derequire > build/remove-storages.js",
    "build:example-bundled": "browserify -t espowerify example/prepare.js > example/prepare-bundled.js && browserify -t espowerify example/remove.js > example/remove-bundled.js",
    "build:test-bundled": "browserify -t espowerify test.js > test-bundled.js",
    "changelog": "touch changelog.md && conventional-changelog -i changelog.md --overwrite --preset angular",
    "clear:test-bundled": "rimraf ./test-bundled.js",
    "david": "david update",
    "eclint": "globstar --ignore \"{node_modules/**,test-bundled.js}\" -- eclint check \"*.{js,yml,md,json}\"",
    "eslint": "eslint --ignore-path .gitignore example/ index.js test.js",
    "fixpack": "fixpack",
    "git:tag": "git tag v${npm_package_version}",
    "lint": "npm run eclint && npm run eslint",
    "test": "testem",
    "test:ci": "testem ci",
    "verify": "npm run lint && npm run test",
    "verify:ci": "npm run lint && npm run test:ci"
  }
}
